<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.GalleryController" spacing="20" styleClass="content-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Image Gallery" styleClass="page-title">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="imageCountLabel" text="Total Images: 0" styleClass="info-label">
            <font>
                <Font size="14"/>
            </font>
        </Label>
    </HBox>

    <HBox spacing="15">
        <Button text="Refresh Gallery" onAction="#handleRefresh" styleClass="action-button">
            <font>
                <Font size="14"/>
            </font>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="statusLabel" styleClass="info-label"/>
    </HBox>

    <Label text="Submitted Images" styleClass="section-title">
        <font>
            <Font name="System Bold" size="20"/>
        </font>
    </Label>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="gallery-scroll">
        <VBox fx:id="galleryContainer" spacing="15" styleClass="gallery-container">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </ScrollPane>

</VBox>
