<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.MainController" stylesheets="/styles.css">

    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="nav-bar">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>

                <Label text="ðŸŒ¿ GreenAware" styleClass="app-title">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Dashboard" onAction="#showDashboard" styleClass="nav-button"/>
                <Button text="Incidents" onAction="#showIncidents" styleClass="nav-button"/>
                <Button text="Actions" onAction="#showActions" styleClass="nav-button"/>
                <Button text="User Reports" onAction="#showUserReports" styleClass="nav-button"/>
                <Button text="Export/Import" onAction="#showExportImport" styleClass="nav-button"/>

                <Region prefWidth="20"/>
                <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </StackPane>
    </center>

</BorderPane>
