<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.UserLoginController" styleClass="content-container">

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="login-container" maxWidth="450">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="ðŸŒ¿ GreenAware" styleClass="login-title">
                <font>
                    <Font name="System Bold" size="36"/>
                </font>
            </Label>

            <Label text="User Login" styleClass="login-subtitle">
                <font>
                    <Font size="18"/>
                </font>
            </Label>

            <Separator prefWidth="200"/>

            <VBox spacing="8">
                <Label text="Username:">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <TextField fx:id="usernameField" promptText="Enter username" prefHeight="40"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Password:">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" promptText="Enter password" prefHeight="40"/>
            </VBox>

            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>

            <Button text="Login" onAction="#handleLogin" styleClass="primary-button"
                    prefWidth="200" prefHeight="45">
                <font>
                    <Font size="16"/>
                </font>
            </Button>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?">
                    <font>
                        <Font size="13"/>
                    </font>
                </Label>
                <Hyperlink text="Register here" onAction="#handleRegisterLink" styleClass="link">
                    <font>
                        <Font size="13"/>
                    </font>
                </Hyperlink>
            </HBox>

            <Button text="â† Back to Home" onAction="#handleBack" styleClass="action-button">
                <font>
                    <Font size="12"/>
                </font>
            </Button>
        </VBox>
    </center>
</BorderPane>
