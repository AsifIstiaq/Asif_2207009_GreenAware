<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.WorkerDashboardController" spacing="20" styleClass="content-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="ðŸ”§ Worker Dashboard" styleClass="page-title">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="welcomeLabel" text="Welcome, Worker!" styleClass="info-label">
            <font>
                <Font size="16"/>
            </font>
        </Label>
        <Button text="Logout" onAction="#handleLogout" styleClass="danger-button"/>
    </HBox>

    <HBox spacing="20">
        <VBox styleClass="stat-card" spacing="10" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Total Assignments" styleClass="stat-label">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <Label fx:id="totalAssignmentsLabel" text="0" styleClass="stat-value">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Label>
        </VBox>

        <VBox styleClass="stat-card" spacing="10" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Pending" styleClass="stat-label">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <Label fx:id="pendingLabel" text="0" styleClass="stat-value">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Label>
        </VBox>

        <VBox styleClass="stat-card" spacing="10" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="In Progress" styleClass="stat-label">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <Label fx:id="inProgressLabel" text="0" styleClass="stat-value">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Label>
        </VBox>

        <VBox styleClass="stat-card" spacing="10" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Completed" styleClass="stat-label">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <Label fx:id="completedLabel" text="0" styleClass="stat-value">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Label>
        </VBox>
    </HBox>

    <VBox spacing="15" VBox.vgrow="ALWAYS">
        <Label text="My Work Assignments" styleClass="section-title">
            <font>
                <Font name="System Bold" size="20"/>
            </font>
        </Label>

        <TableView fx:id="assignmentsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="locationColumn" text="Location" prefWidth="200"/>
                <TableColumn fx:id="actionNoteColumn" text="Work Description" prefWidth="250"/>
                <TableColumn fx:id="deadlineColumn" text="Deadline" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
            </columns>
        </TableView>

        <HBox spacing="15">
            <Button text="View Details" onAction="#handleViewDetails" styleClass="primary-button"/>
            <Button text="Submit Progress" onAction="#handleSubmitProgress" styleClass="success-button"/>
            <Button text="Refresh" onAction="#handleRefresh" styleClass="secondary-button"/>
        </HBox>
    </VBox>
</VBox>
