<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.WorkerRegisterController"
            styleClass="content-container">

    <center>
        <ScrollPane fitToWidth="true" styleClass="content-container">
            <StackPane>
            <VBox alignment="CENTER" spacing="15"
                  styleClass="login-container"
                  maxWidth="500">

                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>

                <Label text="ðŸŒ¿ Worker Registration" styleClass="login-title">
                    <font>
                        <Font name="System Bold" size="32"/>
                    </font>
                </Label>

                <Label text="Join GreenAware Workforce" styleClass="login-subtitle">
                    <font>
                        <Font size="16"/>
                    </font>
                </Label>

                <Separator prefWidth="200"/>

                <VBox spacing="8">
                    <Label text="Full Name:">
                        <font><Font size="13"/></font>
                    </Label>
                    <TextField fx:id="nameField"
                               promptText="Enter your full name"
                               prefHeight="38"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Email:">
                        <font><Font size="13"/></font>
                    </Label>
                    <TextField fx:id="emailField"
                               promptText="Enter your email"
                               prefHeight="38"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Username:">
                        <font><Font size="13"/></font>
                    </Label>
                    <TextField fx:id="usernameField"
                               promptText="Choose a username"
                               prefHeight="38"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Phone Number:">
                        <font><Font size="13"/></font>
                    </Label>
                    <TextField fx:id="phoneField"
                               promptText="Enter phone number"
                               prefHeight="38"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Specialization:">
                        <font><Font size="13"/></font>
                    </Label>
                                <ComboBox fx:id="specializationCombo" promptText="Select specialization" maxWidth="Infinity">
                                    <items>
                                        <javafx.collections.FXCollections fx:factory="observableArrayList">
                                            <java.lang.String fx:value="Waste Management"/>
                                            <java.lang.String fx:value="Water Treatment"/>
                                            <java.lang.String fx:value="Air Quality"/>
                                            <java.lang.String fx:value="Landscaping"/>
                                            <java.lang.String fx:value="Tree Planting"/>
                                            <java.lang.String fx:value="Recycling"/>
                                            <java.lang.String fx:value="Sanitation"/>
                                            <java.lang.String fx:value="General Maintenance"/>
                                        </javafx.collections.FXCollections>
                                    </items>
                                </ComboBox>
                </VBox>

                <VBox spacing="8">
                    <Label text="Password:">
                        <font><Font size="13"/></font>
                    </Label>
                    <PasswordField fx:id="passwordField"
                                   promptText="Choose a password"
                                   prefHeight="38"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Confirm Password:">
                        <font><Font size="13"/></font>
                    </Label>
                    <PasswordField fx:id="confirmPasswordField"
                                   promptText="Re-enter password"
                                   prefHeight="38"/>
                </VBox>

                <Label fx:id="messageLabel"
                       styleClass="error-label"
                       wrapText="true"/>

                <Button text="Register"
                        onAction="#handleRegister"
                        styleClass="primary-button"
                        prefWidth="200"
                        prefHeight="45">
                    <font>
                        <Font size="16"/>
                    </font>
                </Button>

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already registered?">
                        <font><Font size="13"/></font>
                    </Label>
                    <Hyperlink text="Login here"
                               onAction="#handleBackToLogin"
                               styleClass="link">
                        <font><Font size="13"/></font>
                    </Hyperlink>
                </HBox>

                <Button text="â† Back to Home" onAction="#handleBack" styleClass="action-button">
                    <font>
                        <Font size="12"/>
                    </font>
                </Button>

            </VBox>
            </StackPane>
        </ScrollPane>
    </center>
</BorderPane>
